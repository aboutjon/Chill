function ApplicationWindow(){var MasterView=require('ui/common/MasterView'),DetailView=require('ui/common/DetailView');var self=Ti.UI.createWindow({backgroundColor:'#ffffff'});var masterView=new MasterView(),detailView=new DetailView();var createEventButton=Ti.UI.createButton({title:'Create',systemButton:Ti.UI.iPhone.SystemButton.ADD,style:Ti.UI.iPhone.SystemButtonStyle.PLAIN});var masterContainerWindow=Ti.UI.createWindow({title:'Chill',barColor:'#4bb06a'});masterContainerWindow.setRightNavButton(createEventButton);masterContainerWindow.add(masterView);var closeAccountSettingsButton=Ti.UI.createButton({title:'Close',style:Ti.UI.iPhone.SystemButtonStyle.PLAIN});var detailContainerWindow=Ti.UI.createWindow({title:'The Deets',barColor:'#4bb06a'});detailContainerWindow.add(detailView);var navGroup=Ti.UI.iPhone.createNavigationGroup({window:masterContainerWindow});self.add(navGroup);masterView.addEventListener('itemSelected',function(e){detailView.fireEvent('itemSelected',e);navGroup.open(detailContainerWindow);});createEventButton.addEventListener('click',function(e){masterView.fireEvent('scrollToCreateEvent',e);});closeAccountSettingsButton.addEventListener('click',function(e){accountSettingsModal.close();});return self;};module.exports=ApplicationWindow;